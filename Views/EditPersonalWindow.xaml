<Window x:Class="Finly.Views.EditPersonalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edytuj dane osobowe" Width="520" Height="520"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource App.Background}"
        Foreground="{DynamicResource App.Foreground}">
    <Border Margin="16" Padding="16"
            Background="{DynamicResource Surface.Background}"
            BorderBrush="{DynamicResource Surface.Border}"
            BorderThickness="1" CornerRadius="10">
        <StackPanel>
            <TextBlock Text="Dane osobowe" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12"/>

            <StackPanel Margin="0,6,0,0">
                <TextBlock Text="E-mail"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Margin="0,6,0,0">
                <TextBlock Text="Imię"/>
                <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Margin="0,6,0,0">
                <TextBlock Text="Nazwisko"/>
                <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Margin="0,6,0,0">
                <TextBlock Text="Rok urodzenia"/>
                <TextBox Text="{Binding BirthYear, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Margin="0,6,0,0">
                <TextBlock Text="Miasto zamieszkania"/>
                <TextBox Text="{Binding City, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Margin="0,6,0,0">
                <TextBlock Text="Kod pocztowy"/>
                <TextBox Text="{Binding PostalCode, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Margin="0,6,0,0">
                <TextBlock Text="Numer domu / mieszkania"/>
                <TextBox Text="{Binding HouseNo, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                <Button Content="Anuluj" Margin="0,0,8,0" Click="Cancel_Click"/>
                <Button Content="Zapisz dane"
                        Style="{StaticResource PrimaryButton}"
                        Click="Save_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
