<UserControl x:Class="Finly.Pages.ImportPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:util="clr-namespace:Finly.Helpers"
             mc:Ignorable="d">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Pasek opcji -->
        <Border Grid.Row="0" Padding="12" CornerRadius="8"
                Background="{DynamicResource Surface.Background}"
                BorderBrush="{DynamicResource Surface.Border}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- LEWA: wybór pliku + separator + nagłówki + format daty -->
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            util:StackPanelSpacing.Spacing="10">

                    <!-- Plik -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                util:StackPanelSpacing.Spacing="6">
                        <TextBlock Text="Plik CSV:" VerticalAlignment="Center"/>
                        <TextBox x:Name="FilePathBox" Width="308" IsReadOnly="True"/>
                        <Button Content="Wybierz..." Click="Browse_Click"/>
                    </StackPanel>

                    <Separator Width="1" Height="24"/>

                    <!-- Separator pól w pliku -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                util:StackPanelSpacing.Spacing="6">
                        <TextBlock Text="Separator:" VerticalAlignment="Center"/>
                        <ComboBox x:Name="DelimiterBox" Width="90" SelectedIndex="0">
                            <ComboBoxItem Content=","/>
                            <ComboBoxItem Content=";"/>
                            <ComboBoxItem Content="Tab"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Nagłówki -->
                    <CheckBox x:Name="HasHeaderCheckBox"
                              Content="Pierwszy wiersz to nagłówki"
                              IsChecked="True"
                              VerticalAlignment="Center"/>

                    <!-- Format daty -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                util:StackPanelSpacing.Spacing="6">
                        <TextBlock Text="Format daty:" VerticalAlignment="Center"/>
                        <TextBox x:Name="DateFormatBox" Width="120" Text="yyyy-MM-dd"/>
                    </StackPanel>
                </StackPanel>

                <!-- PRAWA: mapowanie kolumn -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center"
                            util:StackPanelSpacing.Spacing="8">
                    <StackPanel>
                        <TextBlock Text="Kwota" FontSize="11" Opacity="0.8"/>
                        <ComboBox x:Name="AmountCol" Width="120"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Data" FontSize="11" Opacity="0.8"/>
                        <ComboBox x:Name="DateCol" Width="140"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Kategoria (kolumna)" FontSize="11" Opacity="0.8"/>
                        <ComboBox x:Name="CatCol" Width="140"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Opis (kolumna)" FontSize="11" Opacity="0.8"/>
                        <ComboBox x:Name="DescCol" Width="160"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Domyślna kategoria (gdy brak w CSV)" FontSize="11" Opacity="0.8"/>
                        <TextBox x:Name="DefaultCategoryBox" Width="160"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Podgląd -->
        <DataGrid x:Name="PreviewGrid"
                  Grid.Row="1" Margin="0,12,0,12"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"/>

        <!-- Akcje -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right"
                    util:StackPanelSpacing.Spacing="8">
            <Button Content="Odśwież podgląd" Click="ReloadPreview_Click"/>
            <Button Content="Importuj" Click="Import_Click"/>
        </StackPanel>
    </Grid>
</UserControl>

